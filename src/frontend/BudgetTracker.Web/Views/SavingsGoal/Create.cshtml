@model BudgetTracker.Web.Models.SavingsGoal

@{
    ViewData["Title"] = "Create Savings Goal";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-piggy-bank"></i> Create New Savings Goal</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Goal Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Emergency Fund" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TargetAmount" class="form-label">Target Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="TargetAmount" type="number" step="0.01" class="form-control" placeholder="10000.00" />
                            </div>
                            <span asp-validation-for="TargetAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentAmount" class="form-label">Current Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="CurrentAmount" type="number" step="0.01" class="form-control" placeholder="0.00" value="0" />
                            </div>
                            <span asp-validation-for="CurrentAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TargetDate" class="form-label">Target Date</label>
                            <input asp-for="TargetDate" type="date" class="form-control" />
                            <span asp-validation-for="TargetDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MonthlyContribution" class="form-label">Monthly Contribution</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MonthlyContribution" type="number" step="0.01" class="form-control" placeholder="500.00" />
                            </div>
                            <span asp-validation-for="MonthlyContribution" class="text-danger"></span>
                            <div class="form-text">How much will you save each month?</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Color" class="form-label">Display Color</label>
                            <select asp-for="Color" class="form-select">
                                <option value="#10B981">Green</option>
                                <option value="#3B82F6">Blue</option>
                                <option value="#8B5CF6">Purple</option>
                                <option value="#F59E0B">Orange</option>
                                <option value="#EF4444">Red</option>
                                <option value="#EC4899">Pink</option>
                                <option value="#06B6D4">Cyan</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info text-white">
                                <i class="bi bi-check-lg"></i> Create Goal
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
