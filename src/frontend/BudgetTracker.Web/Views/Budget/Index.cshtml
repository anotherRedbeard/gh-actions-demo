@model IEnumerable<BudgetTracker.Web.Models.Budget>
@{
    ViewData["Title"] = "Budgets";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold text-primary">
                    <i class="bi bi-calculator me-2"></i>Budgets
                </h1>
                <p class="text-muted">Manage your monthly budgets and spending limits</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Budget
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    @foreach (var budget in Model)
    {
        var totalPlanned = budget.Categories.Sum(c => c.PlannedAmount);
        var totalSpent = budget.Categories.Sum(c => c.SpentAmount);
        var percentage = totalPlanned > 0 ? (totalSpent / totalPlanned) * 100 : 0;
        
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@budget.Name</h5>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-calendar3 me-1"></i>@budget.Month.ToString("MMMM yyyy")
                    </p>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small">Budget Progress</span>
                            <span class="badge @(percentage > 90 ? "bg-danger" : percentage > 75 ? "bg-warning" : "bg-success")">
                                @percentage.ToString("F0")%
                            </span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar @(percentage > 90 ? "bg-danger" : percentage > 75 ? "bg-warning" : "bg-success")" 
                                 style="width: @percentage%"></div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <small class="text-muted d-block">Planned</small>
                            <strong class="text-primary">$@totalPlanned.ToString("N0")</strong>
                        </div>
                        <div class="text-end">
                            <small class="text-muted d-block">Spent</small>
                            <strong class="@(percentage > 90 ? "text-danger" : "text-success")">$@totalSpent.ToString("N0")</strong>
                        </div>
                    </div>
                    
                    <a asp-action="Details" asp-route-id="@budget.Id" class="btn btn-outline-primary btn-sm w-100">
                        <i class="bi bi-eye me-1"></i>View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="mt-3">No Budgets Yet</h3>
        <p class="text-muted">Get started by creating your first budget</p>
        <a asp-action="Create" class="btn btn-primary">Create Budget</a>
    </div>
}
