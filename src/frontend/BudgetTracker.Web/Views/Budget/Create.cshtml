@model BudgetTracker.Web.Models.Budget

@{
    ViewData["Title"] = "Create Budget";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-wallet2"></i> Create New Budget</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Budget Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., January 2026 Budget" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Month" class="form-label">Month</label>
                            <input asp-for="Month" type="date" class="form-control" />
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" placeholder="5000.00" />
                            </div>
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> You can add categories after creating the budget.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Create Budget
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
