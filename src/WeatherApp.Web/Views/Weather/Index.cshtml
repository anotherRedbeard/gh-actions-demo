<style>
    .weather-card {
        transition: transform 0.2s ease-in-out;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .weather-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    .weather-icon {
        font-size: 3rem;
    }
    .temperature {
        font-weight: 600;
        color: #333;
    }
</style>
